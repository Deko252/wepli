<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bit.mapper.TokenMapper">

    <select id="getToken" parameterType="String" resultType="TokenDto">
        select * from tblToken where nick = #{nick}
    </select>

    <update id="updateToken" parameterType="Map">
        update from tblToken set token = #{token} where nick = #{nick}        
    </update>

    <insert id="insertToken" parameterType="TokenDto">
        insert into tblToken values(#{nick}, #{token})
    </insert>

    <delete id="deleteToken" parameterType="String">
        delete from tblToken where nick = #{nick}
    </delete>
</mapper>